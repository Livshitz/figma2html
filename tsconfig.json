{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "rootDir": "."
  },
  "include": [
    "src",
    "bin"
  ],
  "exclude": ["node_modules"]
}
